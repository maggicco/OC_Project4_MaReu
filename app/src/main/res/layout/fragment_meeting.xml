<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_room_color"
        android:src="@drawable/ic_circle_red_1_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/item_room_color"
        app:layout_constraintStart_toEndOf="@+id/item_room_color"
        app:layout_constraintTop_toTopOf="@+id/item_room_color"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_room_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/item_room_name"
        app:layout_constraintStart_toEndOf="@+id/item_room_name"
        app:layout_constraintTop_toTopOf="@+id/item_room_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_room_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/item_room_hour"
        app:layout_constraintStart_toEndOf="@+id/item_room_hour"
        app:layout_constraintTop_toTopOf="@+id/item_room_hour"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/item_room_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_room_color"
        app:layout_constraintTop_toBottomOf="@+id/item_room_hour"
        app:layout_constraintVertical_bias="0.545" />

    <ImageButton
        android:id="@+id/item_delete_button"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_black_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>