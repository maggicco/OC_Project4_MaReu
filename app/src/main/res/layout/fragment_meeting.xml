<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_room_color"
        android:src="@drawable/ic_circle_red_1_24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        android:text="Salle A "
        app:layout_constraintBottom_toBottomOf="@+id/item_room_color"
        app:layout_constraintStart_toEndOf="@+id/item_room_color"
        app:layout_constraintTop_toTopOf="@+id/item_room_color" />
    <TextView
        android:id="@+id/item_room_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        android:text="14-50"
        app:layout_constraintBottom_toBottomOf="@+id/item_room_name"
        app:layout_constraintStart_toEndOf="@+id/item_room_name"
        app:layout_constraintTop_toTopOf="@+id/item_room_name" />

    <TextView
        android:id="@+id/item_room_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        android:text="Stephane"
        app:layout_constraintBottom_toBottomOf="@+id/item_room_hour"
        app:layout_constraintStart_toEndOf="@+id/item_room_hour"
        app:layout_constraintTop_toTopOf="@+id/item_room_hour" />

    <ImageButton
        android:id="@+id/item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/item_room_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_room_name"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>